@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<section class="container">
    <h2>@ViewData["Title"]</h2>
    <form asp-controller="Home" asp-action="ForgotPassword" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <label for="email" class="col-sm-2 control-label">Username</label>
            <divp class="col-sm-10">
                <input asp-for="email" class="form-control" id="email" placeholder="username">
                <span asp-validation-for="email" class="text-danger"></span>
            </divp>
        </div>
        <div>
            <button class="btn btn-default">Send</button>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</section>