
@model IEnumerable<Betalinger>

<section class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <h2>Oversikt over betalinger til forfall</h2>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Faktura id:</th>
                <th>Fra Konto:</th>
                <th>Til konto:</th>
                <th>Forfallsdato:</th>
                <th>Sum:</th>
                <th>Valg:</th>
            </tr>
            
            @foreach (var betal in Model)
            {
                <tr>
                    <td>@betal.Id</td>
                    <td>@betal.fraKonto</td>
                    <td>@betal.tilKonto</td>
                    <td>@betal.forfallDato.Date</td>
                    <td>@betal.belop</td>

                    <td>
                        @if (betal.utfort == false)
                        {
                            <button id="endreknapp" type="submit" class="btn btn-default">Endre</button>
                            <button id="slettknapp" type="submit" class="btn btn-default">Slett</button>
                        }
                    </td>
                </tr>
            }         
        </tbody>
    </table>
</section>
