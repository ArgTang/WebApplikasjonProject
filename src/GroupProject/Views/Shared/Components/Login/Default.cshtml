@model LoginViewModel

<section class="container">
    <h3>BankLogin</h3>
    <form asp-controller="Home" asp-action="Authenticate" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">Username</label>
            <divp class="col-sm-10">
                <input asp-for="username" class="form-control" id="username" placeholder="username">
                <span asp-validation-for="username" class="text-danger"></span>
            </divp>
            
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input asp-for="password" class="form-control" id="password" placeholder="Password">
                <span asp-validation-for="password"  class="text-danger"></span>
            </div>
            
        </div>
        <div>
            <button class="btn btn-default">Login</button>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</section>

